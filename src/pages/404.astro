---
import MainLayout from "@/components/templates/MainLayout.astro";
import { Button } from "@/components/ui/button";
import { Card, CardHeader, CardContent } from "@/components/ui/card";
---

<MainLayout>
  <main class="flex-grow bg-background flex items-center justify-center py-12">
    <Card className="max-w-lg w-full bg-card shadow-xl rounded-lg">
      <CardHeader className="text-center">
        <h1 class="text-6xl font-bold text-primary">404</h1>
      </CardHeader>
      <CardContent className="text-center">
        <p class="text-lg text-muted-foreground mt-4">Oops! La página que buscas no existe.</p>
        <p class="text-sm text-muted-foreground mt-2">
          La página que intentas acceder ha sido movida o no está disponible.
        </p>
        <div class="mt-6">
          <Button
            asChild
            className="w-full px-6 py-3 bg-accent text-white rounded-md hover:bg-accent/80 transition duration-300"
          >
            <a href="/">Go Home</a>
          </Button>
        </div>
      </CardContent>
    </Card>
  </main>
</MainLayout>
