---
import { getSession } from "auth-astro/server";
import DashboardLayout from "@/components/templates/DashboardLayout.astro";
import { RoleRedirect } from "@/components/auth/RoleRedirect";

interface SessionUser {
  user: {
    name?: string;
    email?: string;
    image?: string;
    rol?: string;
    userId?: string;
    googleId?: string;
    googleClientId?: string;
    accessToken?: string;
  };
}

const session = (await getSession(Astro.request)) as SessionUser | null;

// Redirect to login if not authenticated
if (!session) {
  return Astro.redirect("/login");
}
---

<DashboardLayout title="Dashboard - Tutor">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard del Tutor</h1>
    <p class="text-gray-600">Bienvenido, {session.user?.name}</p>
  </div>

  <!-- Role Redirect Component -->
  <RoleRedirect client:load googleUserId={session.user?.googleId || ""} />

  <!-- Dashboard Content -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Tutorías Activas -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Tutorías Activas</h2>
      <div class="text-3xl font-bold text-blue-600 mb-2">3</div>
      <p class="text-gray-600">Sesiones en progreso</p>
    </div>

    <!-- Solicitudes Pendientes -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Solicitudes Pendientes</h2>
      <div class="text-3xl font-bold text-orange-600 mb-2">5</div>
      <p class="text-gray-600">Esperando respuesta</p>
    </div>

    <!-- Horas Totales -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Horas Totales</h2>
      <div class="text-3xl font-bold text-green-600 mb-2">45</div>
      <p class="text-gray-600">Horas de tutoría</p>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Acciones Rápidas</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <button class="bg-blue-600 text-white px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors">
        Ver Solicitudes
      </button>
      <button class="bg-green-600 text-white px-4 py-3 rounded-lg hover:bg-green-700 transition-colors">
        Crear Tutoría
      </button>
      <button class="bg-purple-600 text-white px-4 py-3 rounded-lg hover:bg-purple-700 transition-colors">
        Mis Habilidades
      </button>
      <button class="bg-gray-600 text-white px-4 py-3 rounded-lg hover:bg-gray-700 transition-colors"> Perfil </button>
    </div>
  </div>
</DashboardLayout>
