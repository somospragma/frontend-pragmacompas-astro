---
import TechStackCards from "@/components/organisms/TechStackCards/TechStackCards";
import DashboardLayout from "@/components/templates/DashboardLayout.astro";

// Datos basados en lo que ya existe en el proyecto
const metrics = {
  totalMentores: 3,
  totalMentees: 3,
  solicitudesPendientes: 2,
  sesionesCompletadas: 47,
  mentoresActivos: 2,
  progresoPromedio: 60,
};
---

<DashboardLayout>
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-foreground">Dashboard</h1>
      <p class="text-muted-foreground">Resumen general de la plataforma</p>
    </div>

    <!-- Métricas principales -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-card border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-2xl font-bold text-foreground">{metrics.totalMentores}</p>
            <p class="text-muted-foreground text-sm">Total Mentores</p>
          </div>
          <div class="w-12 h-12 bg-blue-500/10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"
              ></path>
            </svg>
          </div>
        </div>
        <div class="mt-2 text-xs text-green-600">
          {metrics.mentoresActivos} activos
        </div>
      </div>

      <div class="bg-card border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-2xl font-bold text-foreground">{metrics.totalMentees}</p>
            <p class="text-muted-foreground text-sm">Total Mentees</p>
          </div>
          <div class="w-12 h-12 bg-green-500/10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="
                  M17 20h5v-2a3 3 0 00-5.356-1.857
                  M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857
                  M7 20H2v-2a3 3 0 015.356-1.857
                  M7 20v-2c0-.656.126-1.283.356-1.857
                  m0 0a5.002 5.002 0 019.288 0
                  M15 7a3 3 0 11-6 0 3 3 0 016 0
                  zm6 3a2 2 0 11-4 0 2 2 0 014 0z
                  M7 10a2 2 0 11-4 0 2 2 0 014 0z
                "
              ></path>
            </svg>
          </div>
        </div>
        <div class="mt-2 text-xs text-muted-foreground">
          {metrics.progresoPromedio}% progreso promedio
        </div>
      </div>

      <div class="bg-card border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-2xl font-bold text-foreground">{metrics.solicitudesPendientes}</p>
            <p class="text-muted-foreground text-sm">Solicitudes Pendientes</p>
          </div>
          <div class="w-12 h-12 bg-yellow-500/10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-2 text-xs text-yellow-600">Requieren atención</div>
      </div>

      <div class="bg-card border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-2xl font-bold text-foreground">{metrics.sesionesCompletadas}</p>
            <p class="text-muted-foreground text-sm">Sesiones Completadas</p>
          </div>
          <div class="w-12 h-12 bg-purple-500/10 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-2 text-xs text-green-600">Este mes</div>
      </div>
    </div>

    <!-- Actividad reciente -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-card border border-border rounded-lg p-6">
        <h3 class="text-lg font-semibold text-foreground mb-4">Actividad Reciente</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-3 p-3 bg-muted/50 rounded-lg">
            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
            <div class="flex-1">
              <p class="text-sm font-medium text-foreground">Nueva solicitud de mentoría</p>
              <p class="text-xs text-muted-foreground">David Lee - hace 2 horas</p>
            </div>
          </div>
          <div class="flex items-center gap-3 p-3 bg-muted/50 rounded-lg">
            <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
            <div class="flex-1">
              <p class="text-sm font-medium text-foreground">Sesión completada</p>
              <p class="text-xs text-muted-foreground">Ana García - hace 4 horas</p>
            </div>
          </div>
          <div class="flex items-center gap-3 p-3 bg-muted/50 rounded-lg">
            <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
            <div class="flex-1">
              <p class="text-sm font-medium text-foreground">Nuevo mentee registrado</p>
              <p class="text-xs text-muted-foreground">Sofia Martínez - hace 1 día</p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-card border border-border rounded-lg p-6">
        <h3 class="text-lg font-semibold text-foreground mb-4">Tecnologías Populares</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-sm text-foreground">React</span>
            <div class="flex items-center gap-2">
              <div class="w-20 h-2 bg-muted rounded-full">
                <div class="w-4/5 h-2 bg-primary rounded-full"></div>
              </div>
              <span class="text-xs text-muted-foreground">80%</span>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-foreground">Node.js</span>
            <div class="flex items-center gap-2">
              <div class="w-20 h-2 bg-muted rounded-full">
                <div class="w-3/5 h-2 bg-primary rounded-full"></div>
              </div>
              <span class="text-xs text-muted-foreground">60%</span>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-foreground">Python</span>
            <div class="flex items-center gap-2">
              <div class="w-20 h-2 bg-muted rounded-full">
                <div class="w-2/5 h-2 bg-primary rounded-full"></div>
              </div>
              <span class="text-xs text-muted-foreground">40%</span>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-foreground">DevOps</span>
            <div class="flex items-center gap-2">
              <div class="w-20 h-2 bg-muted rounded-full">
                <div class="w-1/3 h-2 bg-primary rounded-full"></div>
              </div>
              <span class="text-xs text-muted-foreground">33%</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <TechStackCards client:load />
  </div>
</DashboardLayout>
