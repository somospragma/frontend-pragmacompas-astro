---
import { ModeToggle } from "../molecules/ModalToggle/ModeToggle";
---
<header class="flex items-center justify-between border-b border-border bg-background px-6 py-4 w-full">
  <div class="flex items-center gap-4">
    <div class="flex items-center gap-3">
      <div class="size-6 text-primary">
        <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M24 45.8096C19.6865 45.8096 15.4698 44.5305 11.8832 42.134C8.29667 39.7376 5.50128 36.3314 3.85056 32.3462C2.19985 28.361 1.76794 23.9758 2.60947 19.7452C3.451 15.5145 5.52816 11.6284 8.57829 8.5783C11.6284 5.52817 15.5145 3.45101 19.7452 2.60948C23.9758 1.76795 28.361 2.19986 32.3462 3.85057C36.3314 5.50129 39.7376 8.29668 42.134 11.8833C44.5305 15.4698 45.8096 19.6865 45.8096 24L24 24L24 45.8096Z"
            fill="currentColor"></path>
        </svg>
      </div>
      <h1 class="text-xl font-bold text-foreground">MentorMatch</h1>
    </div>
  </div>

  <nav class="flex items-center gap-8 text-sm font-medium text-foreground">
    <a href="/" class="hover:text-primary transition-colors px-3 py-2 rounded-md hover:bg-accent">Dashboard</a>
    <a href="/" class="hover:text-primary transition-colors px-3 py-2 rounded-md hover:bg-accent">Explore</a>
    <a href="/" class="hover:text-primary transition-colors px-3 py-2 rounded-md hover:bg-accent">My Network</a>
    <a href="/" class="hover:text-primary transition-colors px-3 py-2 rounded-md hover:bg-accent">Jobs</a>
    <a href="/" class="hover:text-primary transition-colors px-3 py-2 rounded-md hover:bg-accent">Messages</a>
    <a href="/" class="hover:text-primary transition-colors px-3 py-2 rounded-md hover:bg-accent">Notifications</a>
  </nav>

  <div class="flex items-center gap-3">
    <button
      class="h-10 w-10 flex items-center justify-center rounded-lg bg-secondary text-secondary-foreground hover:bg-secondary/80 transition-colors"
    >
      <svg width="20" height="20" fill="currentColor" viewBox="0 0 256 256">
        <path
          d="M221.8,175.94C216.25,166.38,208,139.33,208,104a80,80,0,1,0-160,0c0,35.34-8.26,62.38-13.81,71.94A16,16,0,0,0,48,200H88.81a40,40,0,0,0,78.38,0H208a16,16,0,0,0,13.8-24.06ZM128,216a24,24,0,0,1-22.62-16h45.24A24,24,0,0,1,128,216Z"
        ></path>
      </svg>
    </button>

    <a
      href="/profile"
      class="bg-center bg-cover rounded-full size-10 ring-2 ring-border hover:ring-primary transition-all cursor-pointer"
      style={{
        backgroundImage: 'url("https://lh3.googleusercontent.com/a-/ACNPEu-oN3kEH4")',
      }}
    >
    </a>

    <button
      class="h-10 w-10 flex items-center justify-center rounded-lg bg-secondary text-secondary-foreground hover:bg-secondary/80 transition-colors"
    >
      <svg width="20" height="20" fill="currentColor" viewBox="0 0 256 256">
        <path
          d="M156,128a28,28,0,1,1-28-28A28,28,0,0,1,156,128ZM128,76a28,28,0,1,0-28-28A28,28,0,0,0,128,76Zm0,104a28,28,0,1,0,28,28A28,28,0,0,0,128,180Z"
        ></path>
      </svg>
    </button>

    <ModeToggle client:load />
  </div>
</header>
